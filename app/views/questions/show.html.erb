
  <div class="questionnaire-banner" style="background-image: linear-gradient(125deg, rgba(225, 225, 225,0.6) 0%, rgba(225, 225, 225,0.6) 60%), url(<%=asset_path("rsz_beach.jpg") %>); height: 100vh; width: 100vw;">

  <div class="col-xs-9 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-med-offset-3 col-lg-6 col-lg-offset-3">
    <div class="questionnaire-banner-content">
      <h2>Question Topic: <%= "#{@question.name}" %> </h2>
      <p><%= "#{@question.q_body}" %></p>
      <% counter = 1 %>
      <% @answers.each do |answer| %>
        <div class="questionnaire-banner-answers">
          <p><%= "#{counter}. #{answer.a_body}" %></p>
        </div>
        <% counter +=1 %>
      <% end %>
    </div>
  </div>
</div>

